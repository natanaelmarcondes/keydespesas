<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KeyDespesas</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KeyDespesas.styles.css" asp-append-version="true" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-orange shadow-sm">
            <div class="container-fluid">

                <!-- Nome do sistema -->
                <a class="navbar-brand brand-font"
                   asp-controller="Home"
                   asp-action="Index">
                    NATANAEL MARCONDES
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">

                    <!-- Menu esquerdo -->
                    <ul class="navbar-nav me-auto">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Início</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Titulos" asp-action="Index">Lançamentos</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Categorias" asp-action="Index">Categorias</a>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="" asp-action="Index">Configurações</a>
                            </a>
                        </li>

                    </ul>

                    <!-- Menu direito -->
                    <ul class="navbar-nav ms-auto align-items-center">

                        <li class="nav-item me-3 text-white small">
                            Usuário: <strong>Administrador</strong>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm menu-font"
                               asp-controller="Account"
                               asp-action="Logout">
                                Sair
                            </a>
                        </li>

                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <!-- ✅ OBRIGATÓRIO: RenderBody -->
    <main role="main" class="container py-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-4">
        <div class="container py-3">
            &copy; 2026 - KeyDespesas
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
