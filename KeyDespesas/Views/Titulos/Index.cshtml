@model KeyDespesas.ViewModels.TitulosVm

@{
    ViewData["Title"] = "Títulos";
    var returnUrl = (string?)ViewBag.ReturnUrl ?? Url.Action("Index", "Home");

    var atual = new DateTime(Model.Ano, Model.Mes, 1);
    var prev = atual.AddMonths(-1);
    var next = atual.AddMonths(1);
    var mesLabel = atual.ToString("MM/yyyy");
    
    var totalMes = (Model.Lista ?? new List<KeyDespesas.Models.Titulo>()).Sum(x => x.Valor);
    var totalPagar = (Model.Lista ?? new List<KeyDespesas.Models.Titulo>()).Where(x => x.Tipo == "P").Sum(x => x.Valor);
    var totalReceber = (Model.Lista ?? new List<KeyDespesas.Models.Titulo>()).Where(x => x.Tipo == "R").Sum(x => x.Valor);
    var saldoMes = totalReceber - totalPagar;


}

<div class="dash-page dash-page--compact">

    <div class="dash-header">
        <div class="d-flex align-items-center justify-content-between">
            <div class="dash-welcome">
                <span class="dash-user-icon">
                    <i class="bi bi-receipt-cutoff"></i>
                </span>

                <div>
                    <div class="dash-welcome-title">Lançamentos</div>
                    <div class="dash-welcome-name">Títulos</div>
                </div>
            </div>

            <a class="btn btn-outline-secondary btn-sm" href="@returnUrl">
                <i class="bi bi-arrow-left me-1"></i> Voltar
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-9">

            <div class="card dash-card">
                <div class="card-body">

                    <!-- Topo + Navegação por mês -->
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div>
                            <div class="dash-card-title mb-1">Títulos do mês</div>
                            <div class="text-muted small">Competência: <strong>@mesLabel</strong></div>
                        </div>

                        <div class="d-flex gap-2 align-items-center">

                            <!-- Totalizador do mês -->
                            <div class="dash-total-box text-end me-2">
                                <div class="small text-muted">Total do mês</div>
                                
                                <div class="small">
                                    <span class="text-success">Receber: @totalReceber.ToString("N2")</span>
                                    <span class="text-muted mx-1">|</span>
                                    <span class="text-danger">Pagar: @totalPagar.ToString("N2")</span>
                                </div>
                            </div>

                            <a class="btn btn-outline-secondary btn-sm"
                               asp-action="Index"
                               asp-route-ano="@prev.Year"
                               asp-route-mes="@prev.Month"
                               asp-route-returnUrl="@returnUrl"
                               title="Mês anterior">
                                <i class="bi bi-chevron-left"></i>
                            </a>

                            <a class="btn btn-outline-secondary btn-sm"
                               asp-action="Index"
                               asp-route-ano="@next.Year"
                               asp-route-mes="@next.Month"
                               asp-route-returnUrl="@returnUrl"
                               title="Mês seguinte">
                                <i class="bi bi-chevron-right"></i>
                            </a>

                            <span class="badge text-bg-light border">
                                @(Model.Lista?.Count ?? 0) itens
                            </span>
                        </div>

                    </div>

                    <!-- Form -->
                    <form asp-action="Salvar" method="post" class="row g-2 align-items-end">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="IdEdicao" />
                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                        <input type="hidden" asp-for="Ano" />
                        <input type="hidden" asp-for="Mes" />

                        <div class="col-12 col-md-2">
                            <label class="form-label small mb-1">Tipo</label>
                            <select asp-for="Tipo" class="form-select form-select-sm">
                                <option value="P">Pagar</option>
                                <option value="R">Receber</option>
                            </select>
                        </div>

                        <div class="col-12 col-md-5">
                            <label class="form-label small mb-1">Descrição</label>
                            <input asp-for="Descricao"
                                   id="txtDescricao"
                                   class="form-control form-control-sm"
                                   maxlength="150"
                                   placeholder="EX: FATURA CARTÃO, ALUGUEL..."
                                   autocomplete="off" />
                            <span asp-validation-for="Descricao" class="text-danger small"></span>
                        </div>

                        <div class="col-12 col-md-3">
                            <label class="form-label small mb-1">Categoria</label>
                            <select asp-for="IdCategoria" class="form-select form-select-sm" asp-items="Model.Categorias">
                                <option value="">Selecione</option>
                            </select>
                            <span asp-validation-for="IdCategoria" class="text-danger small"></span>
                        </div>

                        <div class="col-6 col-md-2">
                            <label class="form-label small mb-1">Valor</label>
                            <input asp-for="Valor"
                                   id="txtValor"
                                   class="form-control form-control-sm"
                                   type="text"
                                   inputmode="decimal"
                                   placeholder="0,00"
                                   autocomplete="off" />
                            <span asp-validation-for="Valor" class="text-danger small"></span>
                        </div>

                        <div class="col-6 col-md-2">
                            <label class="form-label small mb-1">Emissão</label>
                            <input asp-for="DataEmissao" class="form-control form-control-sm" type="date" />
                            <span asp-validation-for="DataEmissao" class="text-danger small"></span>
                        </div>

                        <div class="col-6 col-md-2">
                            <label class="form-label small mb-1">Vencimento</label>
                            <input asp-for="DataVencimento" class="form-control form-control-sm" type="date" />
                            <span asp-validation-for="DataVencimento" class="text-danger small"></span>
                        </div>

                        <div class="col-6 col-md-3">
                            <label class="form-label small mb-1">Status</label>
                            <select asp-for="Status" class="form-select form-select-sm">
                                <option value="ABERTO">ABERTO</option>
                                <option value="PAGO">PAGO</option>
                                <option value="CANCELADO">CANCELADO</option>
                                <option value="VENCIDO">VENCIDO</option>
                            </select>
                        </div>

                        <div class="col-12 col-md-3 d-flex gap-2">
                            <button type="submit" class="btn btn-primary btn-sm flex-fill">
                                <i class="bi bi-check2-circle me-1"></i>
                                @(Model.IdEdicao == 0 ? "Cadastrar" : "Salvar")
                            </button>

                            @if (Model.IdEdicao != 0)
                            {
                                <a class="btn btn-outline-secondary btn-sm flex-fill"
                                   asp-action="Cancelar"
                                   asp-route-ano="@Model.Ano"
                                   asp-route-mes="@Model.Mes"
                                   asp-route-returnUrl="@returnUrl">
                                    <i class="bi bi-x-circle me-1"></i>
                                    Cancelar
                                </a>
                            }
                        </div>


                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="col-12">
                                <div class="alert alert-danger py-2 mb-0 small">
                                    Verifique os campos e tente novamente.
                                </div>
                            </div>
                        }
                    </form>

                    <hr class="my-3" />

                    <!-- Lista -->
                    <div class="table-responsive">
                        <table class="table table-sm align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width:30px;">Código</th>
                                    <th style="width:60px;">Tipo</th>
                                    <th style="width:300px;">Descrição</th>
                                    <th style="width:100px;">Venc.</th>
                                    <th style="width:100px;" class="text-end">Valor</th>
                                    <th style="width:50px;">Status</th>
                                    <th style="width:200px;" class="text-end">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Lista == null || Model.Lista.Count == 0)
                                {
                                    <tr>
                                        <td colspan="7" class="text-muted small py-3">Nenhum título cadastrado no mês.</td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var t in Model.Lista)
                                    {
                                        <tr>
                                            <td class="text-muted">@t.Id</td>
                                            <td>@(t.Tipo == "P" ? "PAGAR" : "RECEBER")</td>
                                            <td class="fw-semibold">@t.Descricao</td>
                                            <td>@t.DataVencimento.ToString("dd/MM/yyyy")</td>
                                            <td class="text-end">@t.Valor.ToString("N2")</td>
                                            <td>@t.Status</td>
                                            <td class="text-end">

                                                <a class="btn btn-outline-primary btn-sm"
                                                   asp-action="Index"
                                                   asp-route-editar="@t.Id"
                                                   asp-route-ano="@Model.Ano"
                                                   asp-route-mes="@Model.Mes"
                                                   asp-route-returnUrl="@returnUrl"
                                                   title="Editar">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>

                                                <button type="button"
                                                        class="btn btn-outline-success btn-sm"
                                                        onclick="abrirCopiar(@t.Id)"
                                                        title="Copiar">
                                                    <i class="bi bi-copy"></i>
                                                </button>

                                                <form asp-action="Excluir" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@t.Id" />
                                                    <input type="hidden" name="returnUrl" value="@returnUrl" />
                                                    <input type="hidden" name="ano" value="@Model.Ano" />
                                                    <input type="hidden" name="mes" value="@Model.Mes" />

                                                    <button type="submit"
                                                            class="btn btn-outline-danger btn-sm"
                                                            onclick="return confirm('Excluir o título @t.Descricao ?');"
                                                            title="Excluir">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>

                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>
    </div>

</div>

<!-- Modal Copiar Título -->
<div class="modal fade" id="modalCopiar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content">

            <form asp-action="Copiar" method="post">
                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <h6 class="modal-title">Copiar título</h6>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="id" id="copiar_id" />
                    <input type="hidden" name="returnUrl" value="@returnUrl" />
                    <input type="hidden" name="ano" value="@Model.Ano" />
                    <input type="hidden" name="mes" value="@Model.Mes" />

                    <label class="form-label small mb-1">Novo vencimento</label>
                    <input type="date"
                           name="novoVencimento"
                           id="copiar_venc"
                           class="form-control form-control-sm"
                           required />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">
                        Cancelar
                    </button>

                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="bi bi-check2-circle me-1"></i> Copiar
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            const txt = document.getElementById('txtDescricao');
            if (!txt) return;

            // Descrição sempre em MAIÚSCULO
            txt.addEventListener('input', function () {
                this.value = this.value.toUpperCase();
            });

            // Enter salva quando está no campo descrição
            document.addEventListener('keydown', function (e) {
                if (e.key === 'Enter' && document.activeElement === txt) {
                    const form = txt.closest('form');
                    if (form) {
                        e.preventDefault();
                        form.submit();
                    }
                }
            });

            setTimeout(() => txt.focus(), 200);
        })();

        function abrirCopiar(id) {
            const idEl = document.getElementById('copiar_id');
            const vencEl = document.getElementById('copiar_venc');

            idEl.value = id;

            // Sugere amanhã como padrão
            const d = new Date();
            d.setDate(d.getDate() + 1);

            const yyyy = d.getFullYear();
            const mm = String(d.getMonth() + 1).padStart(2, '0');
            const dd = String(d.getDate()).padStart(2, '0');

            vencEl.value = `${yyyy}-${mm}-${dd}`;

            const modal = new bootstrap.Modal(document.getElementById('modalCopiar'));
            modal.show();

            setTimeout(() => vencEl.focus(), 150);
        }
    </script>
}
